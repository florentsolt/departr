-# coding: utf-8
#header
  - if @config.get(:rpx)
    %a#signin{:href => "https://#{@config.get(:rpx)[:realm]}.rpxnow.com/openid/embed?token_url=" + URI.escape(host + "/signin")}
      Sign In
  %a#edit{:href => "#"} Edit commands
  %a#settings{:href => "#"} Settings
  %a#help{:href => "#"} Help
  %a{:id => :signout, :href => '#'} Sign Out

%form{:id => :commandline}
  #logo= "depart<span>r</span>"
  %img{:src => 'data:image/png;base64,'}
  %input{:type => :text, :id => :input, :name => :input}
  #question
    %label#label Question
    %input{:type => :text, :id => :answer, :name => :answer}
#special
  - if @config.calendar
    #date.clock
      .wday
      .day
  - if @config.clock1
    %canvas#clock1.clock
  - if @config.clock2
    %canvas#clock2.clock
  -if @config.clock3
    %canvas#clock3.clock

:javascript

  // Globals
  Command.data = #{@commands};
  Settings = #{@settings};

  window.addEvent('domready', function() {
    Application.init();
    Command.init();

    // Clock 1
    if ($('clock1')) {
      new CoolClock({
        canvasId: 'clock1',
        displayRadius: 40,
        gmtOffset: #{clock_offset(@config.clock1)},
        label: #{clock_label(@config.clock1)},
        fontSize: '30px'
      });
    }

    // Clock 2
    if ($('clock2')) {
      new CoolClock({
        canvasId: 'clock2',
        displayRadius: 40,
        gmtOffset: #{clock_offset(@config.clock2)},
        label: #{clock_label(@config.clock2)},
        fontSize: '30px'
      });
    }

    // Clock 3
    if ($('clock3')) {
      new CoolClock({
        canvasId: 'clock3',
        displayRadius: 40,
        gmtOffset: #{clock_offset(@config.clock3)},
        label: #{clock_label(@config.clock3)},
        fontSize: '30px'
      });
    }
  });
